<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cross"
            android:contentDescription="Close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Filters"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#D3D3D3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkEggs"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:buttonTint="#4CAF50" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Eggs"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkNoodles"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:buttonTint="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Noodles &amp; Pasta"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkChips"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:buttonTint="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Chips &amp; Crisps"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/checkFastFood"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:buttonTint="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Fast Food"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkIndividual"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:buttonTint="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Individual Collection"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkCocola"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:buttonTint="#4CAF50" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Cocola"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkIfad"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:buttonTint="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Ifad"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_item"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkKaziFarmas"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:buttonTint="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Kazi Farmas"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#D3D3D3"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Apply Filter"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:elevation="0dp" />
    </LinearLayout>

</LinearLayout>