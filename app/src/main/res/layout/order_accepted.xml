<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/greenlogo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/orderAcceptedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order has been accepted"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/checkIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <TextView
        android:id="@+id/orderAcceptedSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your items have been placed and is on its way to being processed"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/orderAcceptedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/trackOrderButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Track Order"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/orderAcceptedSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/backHomeButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Back to home"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/trackOrderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>