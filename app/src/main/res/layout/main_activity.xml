<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation" />

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/navShop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_33"
                android:tint="#181725" />

            <Button
                android:id="@+id/btnShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textSize="12sp"
                android:textColor="#181725"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:layout_marginTop="4dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navExplore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgExplore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_34"
                android:tint="#181725" />

            <Button
                android:id="@+id/btnExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="12sp"
                android:textColor="#181725"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:layout_marginTop="4dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_35"
                android:tint="#181725" />

            <Button
                android:id="@+id/btnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textColor="#181725"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:layout_marginTop="4dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navFavourite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgFavourite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_36"
                android:tint="#181725" />

            <Button
                android:id="@+id/btnFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textSize="12sp"
                android:textColor="#181725"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:layout_marginTop="4dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgAccount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_37"
                android:tint="#181725" />

            <Button
                android:id="@+id/btnAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="12sp"
                android:textColor="#181725"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:layout_marginTop="4dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>